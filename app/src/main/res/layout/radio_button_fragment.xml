<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.RadioButtonFragment" android:id="@+id/constraintLayout">
    <ImageView
            android:src="@android:drawable/btn_star_big_on"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgViewRadioBtnFrag"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scrollbarTrackVertical="@drawable/investment_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewQuestion"
            android:hint="Pergunta"
            android:textColor="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/imgViewRadioBtnFrag"
            app:layout_constraintEnd_toEndOf="@+id/radioGroupFrag"
            app:layout_constraintStart_toStartOf="@+id/radioGroupFrag"
            app:layout_constraintHorizontal_bias="0.0"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroupFrag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintVertical_bias="0.165">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonAlternative_a"
                android:layout_weight="1"
                android:layout_marginBottom="8dp" android:textSize="14sp"
                android:textColor="@android:color/background_light"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonAlternative_b"
                android:layout_weight="1"
                android:layout_marginBottom="8dp" android:textSize="14sp"
                android:textColor="@android:color/background_light"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonAlternative_c"
                android:layout_weight="1"
                android:layout_marginBottom="8dp" android:textSize="14sp"
                android:textColor="@android:color/background_light"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonAlternative_d"
                android:layout_weight="1"
                android:layout_marginBottom="8dp" android:textSize="14sp"
                android:textColor="@android:color/background_light"
                android:visibility="visible"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonAlternative_e"
                android:layout_weight="1"
                android:layout_marginBottom="8dp" android:textSize="14sp"
                android:textColor="@android:color/background_light"
                android:visibility="visible"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>